<odoo>
  <data>
  
   <record id="view_sale_order_form_inherit" model="ir.ui.view">
      <field name="name">sale.order.form.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="discount_applies" widget="radio" options="{'horizontal': true}" groups="product.group_product_pricelist"/>
        </xpath>
        <xpath expr="//field[@name='payment_term_id']" position="before">
          <field name="date_order1"/>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
            <field name="discount_method"/>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='discount_method']" position="after">
            <field name="discount_amount"/>
        </xpath>

        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_packaging_qty']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_packaging_id']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='discount_method']" position="attributes">
            <attribute name="attrs">{'column_invisible': [('parent.discount_applies', '=', 'Global')]}</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='discount_amount']" position="attributes">
            <attribute name="attrs">{'column_invisible': [('parent.discount_applies', '=', 'Global')]}</attribute>
        </xpath>
        <xpath expr="//page/group[@name='note_group']/group/field[@name='tax_totals_json']" position="before">
            <field name="line_discount"/>
        </xpath>
        <xpath expr="//page/group[@name='note_group']/group/field[@name='note']" position="before">
           <field name="discount_methodsfe" attrs="{'invisible': [('discount_applies', '!=', 'Global')]}"/>
           <field name="discount_amountsfe" attrs="{'invisible': [('discount_applies', '!=', 'Global')]}"/>  
        </xpath>

        <xpath expr="//page/group[@name='note_group']/group/field[@name='tax_totals_json']" position="attributes">
            <attribute name="invisible">1</attribute>        
        </xpath>

        <xpath expr="//page/group[@name='note_group']/group/field[@name='line_discount']" position="before">
            <field name="amount_untaxed"/>
        </xpath>
        <xpath expr="//page/group[@name='note_group']/group/field[@name='line_discount']" position="after">
            <field name="amount_tax"/>
                <hr/>      <hr/>
            <field name="amount_total"/>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='discount']" position="attributes">
            <attribute name="invisible">1</attribute>        
        </xpath>
      </field>
    </record>





  </data>
</odoo>